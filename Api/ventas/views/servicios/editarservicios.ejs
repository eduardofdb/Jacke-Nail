    <script>

        function mostrarImagenSeleccionada(input) {
            const imagenSeleccionada = document.getElementById('imagenSeleccionada');
            const vistaPreviaImagen = document.getElementById('vistaPreviaImagen');

            // Verifica si se seleccionó una imagen
            if (input.files && input.files[0]) {
                const lector = new FileReader();

                lector.onload = function (e) {
                    imagenSeleccionada.src = e.target.result;
                };

                lector.readAsDataURL(input.files[0]);

                vistaPreviaImagen.style.display = 'block';
            } else {
                // Oculta la vista previa si no hay imagen seleccionada
                vistaPreviaImagen.style.display = 'none';
            }
        }

        function guardarCambios() {
            // Pregunta al usuario si realmente desea actualizar los datos
            Swal.fire({
                title: '¿Estás seguro?',
                text: '¿Quieres actualizar los datos del servicio?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, actualizar',
                cancelButtonText: 'Cancelar',
            }).then((result) => {
                if (result.isConfirmed) {
                    // Obtén los datos del formulario
                    const formData = new FormData(document.getElementById('formularioServicio'));

                    // Realiza una solicitud PUT al servidor para actualizar los datos del servicio
                    fetch(`http://localhost:3000/Ventas/actualizarServicio/<%= buscarServicio._id %>`, {
                        method: 'PUT',
                        body: formData,
                    })
                        .then(response => response.json())
                        .then(data => {
                            // Muestra una alerta si la actualización fue exitosa
                            Swal.fire({
                                title: 'Datos actualizados',
                                text: 'Los datos del servicio han sido actualizados correctamente.',
                                icon: 'success',
                            });

                            window.location.href = 'http://localhost:3000/Ventas/servicios';

                        })
                        .catch(error => {
                            console.error('Error:', error);
                            // Muestra una alerta de error en caso de fallo
                            Swal.fire({
                                title: 'Error',
                                text: 'Ha ocurrido un error al intentar actualizar los datos del servicio.',
                                icon: 'error',
                            });
                        });
                }
            });
        }


    </script>

