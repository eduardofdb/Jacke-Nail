    <div class="container">
        <section class="bg-gray-50 dark:bg-gray-900">
            <div
                class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0 formulario-container">
                <div
                    class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-sm xl:p-0 dark:bg-gray-800 dark:border-gray-700">
                    <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                        <h1
                            class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white text-center">
                            Nuevo editar</h1>
                        <form id="formularioServicio" class="space-y-4 md:space-y-6" method="POST"
                            enctype="multipart/form-data" onsubmit="return validarFormulario()">
                            <div class="mb-4">
                                <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
                                    for="file_input"> Imagen del servicio: </label>
                                <input value="<%= buscarServicio.Img %>"
                                    class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400"
                                    id="file_input" name="imagen" type="file" onchange="mostrarImagenSeleccionada(this)"
                                    enctype="multipart/form-data">
                            </div>
                            <% console.log(buscarServicio); %>
                                <div>
                                    <label for="nombreServicio"
                                        class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Nombre del
                                        servicio:</label>
                                    <input type="text" value="<%= buscarServicio.nombreServicio %>"
                                        name="nombreServicio" id="nombreServicio"
                                        class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                                        placeholder="Ingrese nombre del servicio" required>
                                </div>

                                <div>
                                    <label for="tiempoServicio"
                                        class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Tiempo del
                                        servicio:</label>
                                    <input type="text" value="<%= buscarServicio.tiempoServicio %>"
                                        name="tiempoServicio" id="tiempoServicio"
                                        class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                                        placeholder="Ingrese tiempo del servicio" required>
                                </div>

                                <div>
                                    <label for="precioServicio"
                                        class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Precio del
                                        servicio:</label>
                                    <input type="number" value="<%= buscarServicio.precioServicio %>"
                                        name="precioServicio" id="precioServicio"
                                        class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                                        placeholder="Ingrese precio del servicio" required>
                                </div>

                                <div>
                                    <label for="estadoServicio"
                                        class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">estado
                                        Servicio:</label>
                                    <input type="number" value="<%= buscarServicio.estadoServicio %>"
                                        name="estadoServicio" id="estadoServicio"
                                        class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                                        placeholder="Ingrese precio del servicio" required>
                                </div>

                                <div id="vistaPreviaImagen" class="mb-4">
                                    <img id="imagenSeleccionada" class="w-full max-h-40 object-cover rounded-lg"
                                        alt="Vista previa de la imagen">
                                </div>

                                <div class="flex justify-center">
                                    <div class="flex justify-center">
                                        <button type="button" onclick="guardarCambios()"
                                            class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Guardar</button>
