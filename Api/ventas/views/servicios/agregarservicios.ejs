<script>

    function mostrarImagenSeleccionada(input) {
        const imagenSeleccionada = document.getElementById('imagenSeleccionada');
        const vistaPreviaImagen = document.getElementById('vistaPreviaImagen');

        // Verifica si se seleccionó una imagen
        if (input.files && input.files[0]) {
            const lector = new FileReader();

            lector.onload = function (e) {
                imagenSeleccionada.src = e.target.result;
            };

            lector.readAsDataURL(input.files[0]);

            vistaPreviaImagen.style.display = 'block';
        } else {
            // Oculta la vista previa si no hay imagen seleccionada
            vistaPreviaImagen.style.display = 'none';
        }
    }

    document.querySelector('.space-y-4').addEventListener('submit', async function (event) {
    event.preventDefault(); // Evitar que el formulario se envíe directamente

    try {
        const nombreServicio = document.getElementById('nombreServicio').value;
        const tiempoServicio = document.getElementById('tiempoServicio').value;
        const precioServicio = document.getElementById('precioServicio').value;
        const estadoServicio = document.getElementById('estadoServicio').value;
        const imagenInput = document.getElementById('file_input');
        const imagen = imagenInput.files[0];

        // Validar que los campos no estén vacíos
        if (!nombreServicio || !tiempoServicio || !precioServicio) {
            Swal.fire({
                icon: 'error',
                title: 'Campos incompletos',
                text: 'Por favor, complete todos los campos del formulario',
            });
            return;
        }

        // Validar que precioServicio sea un número positivo
        const precioServicioNumber = parseFloat(precioServicio);
        if (isNaN(precioServicioNumber) || precioServicioNumber <= 0) {
            Swal.fire({
                icon: 'error',
                title: 'Precio inválido',
                text: 'Por favor, ingrese un precio válido para el servicio',
            });
            return;
        }

        const formData = new FormData();
        formData.append('nombreServicio', nombreServicio);
        formData.append('tiempoServicio', tiempoServicio);
        formData.append('precioServicio', precioServicioNumber);
        formData.append('estadoServicio', estadoServicio);
        formData.append('imagen', imagen);

        const response = await fetch('http://localhost:3000/Ventas/servicios/registrar', {
            method: 'POST',
            body: formData,
        });

        const data = await response.json();

        if (response.ok) {
            Swal.fire({
                title: 'Servicio creado exitosamente',
                text: '¿Deseas registrar el servicio?',
                icon: 'success',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, registrar servicio',
                cancelButtonText: 'No, cerrar',
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire('Servicio registrado', '', 'success');
                    setTimeout(function () {
                        location.reload();
                    }, 2000);
                }
            });
        } else {
            Swal.fire('Error al crear un nuevo servicio', '', 'error');
        }

    } catch (error) {
        console.error('Error al enviar la solicitud a la API:', error);
        Swal.fire('Error al enviar la solicitud a la API', '', 'error');
    }
});


   
</script>
   
