  <div class="container" style="max-width: 700;">

    <div class="relative  mx-4 my-4">
      <div class="relative shadow-md sm:rounded-lg">
        <table id="usuarios" class="table table table-bordered ">
          <thead style="background-color: #2b2929; color: white;">
            <tr>
              <th scope="col">Cliente </th>
              <th scope="col">Empleado</th>
              <th scope="col">servicio</th>
              <th scope="col">Hora</th>
              <th scope="col">Precio</th>
              <th class="flex items-center px" scope="col">Estado
                <a href="http://localhost:3000/Ventas/agregar/Ventas" type="button">
                  <i class=" mx-2 bx bx-cart-alt" style="color: blue"></i>
                </a>
              </th>
            </tr>
          </thead>

          <tbody>
            <% if (ventas.length> 0) { %>
              <% ventas.forEach(venta=> { %>
                <tr
                  class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">

                  <td class="flex items-center px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    <img class="w-10 h-10 rounded-full" src="/images/<%= encodeURIComponent(venta.Clientes.Img) %>"
                      alt="Jese image">
                    <div class="ps-3">
                      <div class="text-base font-semibold">
                        <%= venta.Clientes.nombre_completo %>
                      </div>
                      <div class="font-normal text-gray-500">
                        <%= venta.Clientes.correo %>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4">

                    <div class="flex items-center">
                      <img class="w-10 h-10 rounded-full" src="/images/<%= encodeURIComponent(venta.Empleados.Img) %>"
                        alt="Servicio image" style="vertical-align: top;">
                      <div class="ps-3" style="vertical-align: top;">
                        <div class="text-base font-semibold">
                          <%= venta.Empleados.nombre_completo %>
                        </div>
                        <div class="font-normal text-gray-500">
                          <%= venta.Empleados.correo %>
                        </div>
                      </div>
                    </div>

                  </td>

                  <td class="px-6 py-4">
                    <div class="flex items-center">
                      <img class="w-10 h-10 rounded-full" src="/images/<%= encodeURIComponent(venta.idServicio.Img) %>"
                        alt="Servicio image" style="vertical-align: top;">
                      <div class="ps-3" style="vertical-align: top;">
                        <div class="text-base font-semibold">
                          <%= venta.idServicio.nombreServicio %>
                        </div>
                        <div class="font-normal text-gray-500">
                          <%= venta.idServicio.tiempoServicio %> precio <%= venta.idServicio.precioServicio %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <% function formatearFecha(fecha) { %>
                    <% const opciones={ year: 'numeric' , month: 'numeric' , day: 'numeric' }; %>
                      <%= new Date(fecha).toLocaleDateString('es-ES', opciones) %>
                        <% } %>
                          <td class="px-6 py-4">

                            <%= formatearFecha(venta.fecha) %>

                          </td>
                          <td class="px-6 py-4">
                            <%= venta.precioVenta %>
                          </td>
                          <td style="text-align: center;">
                            <div class="flex items-center">
                        
                                <button id="dropdownMenuIconHorizontalButton"
                                        data-dropdown-toggle="dropdownDotsHorizontal"
                                        class="inline-flex items-center p-2 text-sm font-medium text-center text-gray-900 bg-white rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none dark:text-white focus:ring-gray-50 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
                                    <i class='bx bx-dots-horizontal-rounded' style='display: block; margin: auto;'></i>
                                </button>

                              <div id="dropdownDotsHorizontal"
                                class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-20 dark:bg-gray-700 dark:divide-gray-600">
                                <ul class="py-2 text-sm text-gray-700 dark:text-gray-200"
                                  aria-labelledby="dropdownMenuIconHorizontalButton">
                                  <br>
                                  <li class="flex justify-center items-center mb-3">
                                    <a href="#" onclick="confirmar_eliminar('<%= venta._id %>')" class="mr-2">
                                      <i class='bx bx-trash-alt' style='color:rgba(255,0,4,0.85)'></i>
                                    </a>
                                  </li>
                                  
                                </ul>
                              </div>

                            </div>

                          </td>
                </tr>

                <% }); %>
                  <% }; %>

          </tbody>
        </table>


      </div>
    </div>


    <style>
      .bx {
        font-size: 28px;
